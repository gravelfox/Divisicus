@model Divisicus.Web.Models.NewAliasViewModel
@{
    ViewBag.Title = "Change Alias";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangeAlias", "Manage", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <h4>Change Alias</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.NewAlias, new { @class = "col-md-2 control-label" })
        
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NewAlias, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewAlias, null, new { @class = "text-danger" })
            <br />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change alias" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}